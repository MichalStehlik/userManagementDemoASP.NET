@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Správa profilu" class="nav-link">@UserManager.GetUserName(User)</a>
            </li>
        </ul>
        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Odhlásit se</button>
    </form>
    
}
else
{
    <div class="navbar-nav">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary m-1">Zaregistrovat se</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary m-1">Přihlásit se</a>
    </div>
}
@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrace";
}

<h2>@ViewData["Title"]</h2>
<h4>Připojení účtu služby @Model.LoginProvider .</h4>
<hr />

<p class="text-info">
    Účet služby <strong>@Model.LoginProvider</strong> byl úspěšně připojen.
    Nyní vložte emailovou adresu připojenou ke stávajícímu účtu.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrace</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


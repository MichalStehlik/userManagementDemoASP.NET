@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Ověřovací kód";
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    Pokoušíte se přihlásit přes ověřovací kód. Toto přihlášení nemůže fungovat dlouhodobě a je jen jednorázové.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Přihlášení</button>
        </form>
    </div>
</div>
 
 @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model CreateModel
@using userManagement.Data

@{
    ViewData["Title"] = "Nový uživatel";
}
<h2>Vytvoření uživatele</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Nový uživatel</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <div>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(x => x.Input.Gender, Gender.Male) Muž
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(x => x.Input.Gender, Gender.Female) Žena
                    </label>
                </div>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                <p>Pokud nezadáte vlastní uživatelské jméno, použije se automaticky email.</p>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Input.EmailConfirmed">
                    <input asp-for="Input.EmailConfirmed" />Potvrzený email
                </label>
                <span asp-validation-for="Input.EmailConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Input.PhoneNumberConfirmed">
                    <input asp-for="Input.PhoneNumberConfirmed" />Potvrzený telefon
                </label>
                <span asp-validation-for="Input.PhoneNumberConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Uložit</button> <a class="btn btn-light" asp-page="Index">Zpět</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

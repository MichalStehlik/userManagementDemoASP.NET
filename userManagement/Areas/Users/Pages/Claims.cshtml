@page
@model ClaimsModel
@{
    ViewData["Title"] = "Claims";
}
<h2>Přiřazení claimu uživateli</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Nový claim</h4>
            <hr />
            <input type="hidden" asp-for="Input.User" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Type"></label>
                <input asp-for="Input.Type" class="form-control" />
                <span asp-validation-for="Input.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Value"></label>
                <input asp-for="Input.Value" class="form-control" />
                <span asp-validation-for="Input.Value" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Uložit</button> <a class="btn btn-light" asp-page="Details" asp-route-id="@Model.Input.User">Zpět</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
